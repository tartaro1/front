  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/views/cart.css">
  <script src="https://kit.fontawesome.com/58e42bf76d.js" crossorigin="anonymous"></script>
  <title>Carrito de Compras</title>
</head>
<body>
    <%- include('./partials/header') %>
    <div class="container mx-auto p-4">
        <h1 class="text-3xl text-ctr mb-4">Tus Productos</h1>
        <div id="container-md" class="flex">
            <div class="w-80" id="cart-items"></div>
            <div class="w-20 container-sub h-48 mb-4 ml-4 border-2 shadow-lg rounded-lg text-ctr">
