<!doctype html>
<html lang="en">
<head>
    <%- include('./partials/head', {title:'Gestion de Contenido'}) %>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include('./partials/header-dash') %>
            </div>
            <div class="col-sm-10">
                <div class="d-flex justify-content-between mb-3">
                    <div class="p-2"></div>
                    <div class="p-2">
                        <h1 class="text-center">Gestion de contenido</h1>
                    </div>
                    <div class="col-2 p-1 sidebar-item"><i class="sidebar-icon bi bi-person-circle"></i> <span style="margin-left: 10px;">Emmanuel</span></div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <form id="uploadForm" enctype="multipart/form-data">
                            <div class="mb-3">
                              <label for="titulo" class="form-label">TÃ­tulo</label>
                              <input type="text" class="form-control" id="titulo" name="titulo" required>
                            </div>
                            <div class="mb-3">
                              <label for="contenido" class="form-label">Contenido</label>
                              <textarea class="form-control" id="contenido" name="contenido" rows="3" required></textarea>
                            </div>
                            <div class="mb-3">
                              <label for="formFile" class="form-label">Archivo PDF</label>
                              <input type="file" class="btn btn-primary form-control form-control-lg" id="formFile" name="pdf">
                            </div>
                            <button type="submit" class="btn btn-primary">Subir</button>
                          </form>
                    </div>
                    <div class="col-sm-7">
                        <h2>Archivos Subidos</h2>
                        <ul id="uploadedFiles"></ul>
                    </div>

                </div>
            </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('uploadForm').addEventListener('submit', async (event) => {
    event.preventDefault();
    const formData = new FormData(event.target);
    const response = await fetch('https://ms-backend-tartaro.onrender.com/gestion', {
        method: 'POST',
        body: formData,
    });
    if (response.ok) {
        alert('Contenido subido exitosamente');
        const result = await response.json();
        const pdfPath = result.data.pdf_path;
        console.log(pdfPath);
        const uploadedFilesList = document.getElementById('uploadedFiles');
        const listItem = document.createElement('li');
        const downloadLink = document.createElement('a');
        downloadLink.href = `https://ms-backend-tartaro.onrender.com${pdfPath}`;
        downloadLink.innerText = 'Descargar PDF';
        downloadLink.setAttribute('download', '');
        downloadLink.download = `https://ms-backend-tartaro.onrender.com${pdfPath}`
        listItem.appendChild(downloadLink);
        uploadedFilesList.appendChild(listItem);
    } else {
        alert('Error subiendo contenido');
    }
});

    </script>
</body>
</html>
