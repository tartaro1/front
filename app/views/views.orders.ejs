<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <script>
        const logOut = () => {
            sessionStorage.clear();
            window.location.href= "/"
        };
    </script>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2 position-fixed h-100 p-0" style="height: 100vh;">
                <%- include('./partials/header-dash') %>
            </div>
            <div class="col-sm-10 contentDelete p-0 position-absolute top-0 end-0">
                <div class="container mt-4">
                    <div class="row">
                        <span class="col-10 title-user">Lista de pedidos</span>
                        <div class="col-2 p-1 sidebar-item"><i class="sidebar-icon bi bi-person-circle"></i> <span
                                style="margin-left: 10px;">Emmanuel</span></div>
                    </div>
                    <div class="search-and-add">
                        <!-- Barra de búsqueda -->
                        <div class="search-bar">
                            <div class="input-group">
                                <input type="search" id="browse" placeholder="Buscar pedido por repartidor"
                                    class="form-control rounded-pill alert-dark" aria-label="Buscar usuario"><i
                                    class="bi bi-search"></i>
                                </div>
                            </div>
                            <!-- Botón de agregar usuario -->
                        <button class="btn btn-warning add-user-btn" style="color:#fff;" type="button" data-bs-toggle="modal" data-bs-target="#exampleAddUserModal"><i class="bi bi-plus"></i></button>
                    </div>
                </div>
                <div class="modal fade" id="exampleAddUserModal" tabindex="-1"
                    aria-labelledby="exampleEditUserModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title fs-5" id="exampleEditUserModalLabel">Agregar Pedido</h3>
                                <button type="button" class="btn btn-outline-dark bi-x btn-close-modal"
                                    data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="mb-3">
                                        <label for="estadoPedido" class="col-form-label">Estado del Pedido</label>
                                        <select class="form-control alert-dark rounded estadoSele">
                                            <option value="En Espera">En Espera</option>
                                            <option value="Cancelado">Cancelado</option>
                                            <option value="Entregado">Entregado</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="direccion" class="col-form-label">Dirección</label>
                                        <input type="text" class="form-control alert-dark rounded" id="direccionSele">
                                    </div>
                                    <div class="mb-3">
                                        <label for="cliente" class="col-form-label">Cliente</label>
                                        <select class="form-control alert-dark rounded" id="usuariosSele">
                                            <!-- Aquí se añadirán los productos disponibles -->
                                            
                                            <!-- Añadir más productos según sea necesario -->
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="idRepartidor" class="col-form-label">Repartidor</label>
                                        <select class="form-control alert-dark rounded" id="repartidorSele">
                                            <!-- Aquí se añadirán los productos disponibles -->
                                            <!-- Añadir más productos según sea necesario -->
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="productos" class="col-form-label">Productos</label>
                                        <select multiple class="form-control alert-dark rounded" id="productosSele">
                                            <!-- Aquí se añadirán los productos disponibles -->

                                            <!-- Añadir más productos según sea necesario -->
                                        </select>
                                    </div>
                                </form>
                                <div style="text-align: center;">
                                    <button type="button" class="btn btn-warning btn-save">Guardar</button>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <!-- Modal Editar Usuario -->
                <div class="modal fade" id="exampleEditUserModal" tabindex="-1"
                    aria-labelledby="exampleEditUserModalLabel" aria-hidden="true">
                    <div class="modal-dialog order">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Editar pedido</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="card ">
                                    <div class="card-header d-flex justify-content-between">
                                        <div class="m-3">
                                            <strong class="usuario">Usuario:</strong>
                                        </div>
                                        <div class="input-group m-3">
                                            <span class="input-group-text"><i class="bi bi-alarm"></i></span>
                                            <input type="time" class="time">
                                        </div>
                                        <div class="input-group m-3 ps-2">
                                            <span class="input-group-text" id="basic-addon1">Repartidor</span>
                                            <select name="select" class="form-control dealer" id="inputGroupSelect02">
                                                <option value="value1" class="rep" selected disabled>Value 1</option>
                                              </select>
                                        </div>
                                    </div>
                                    <div class="card-body detalles">

                                    </div>
                                    <div class="card-footer text-muted d-flex justify-content-around">
                                        <div class="input-group pt-5 pb-5">
                                            <label class="input-group-text" for="inputGroupSelect01">Estado</label>
                                            <select class="form-select" id="inputGroupSelect01">
                                                <option class="selected" selected disabled>Seleciona</option>
                                                <option value="Entregado">Entregado</option>
                                                <option value="En Espera">En Espera</option>
                                                <option value="Cancelado">Cancelado</option>
                                            </select>
                                        </div>
                                        <div class="totales p-2 bg-light border">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer d-flex justify-content-center">
                                <button type="button" class="btn btn-warning save">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal Eliminar Usuario -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header" style="align-self: center;padding-bottom:20px">
                                <h5 class="modal-title fs-5" id="staticBackdropLabel">¿Deseas eliminar a "Esneider"?
                                </h5>
                            </div>
                            <div style="text-align: center;padding-bottom: 20px;">
                                <button type="button" class="btn btn-warning accept" data-bs-dismiss="modal"
                                    style="color:white">Aceptar</button>
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Rechazar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <table class="table table bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col">ID_Pedido</th>
                                <th scope="col">Estado Pedido</th>
                                <th scope="col">Direccion</th>
                                <th scope="col">Cliente</th>
                                <th scope="col">Precio Venta</th>
                                <th scope="col">ID_Repartidor</th>
                                <th scope="col">Fecha Pedido</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(order=> { %>
                                <tr class="user-list-item" data-id=`<%=order.ID_Usuario %>`>
                                    <td class="id">
                                        <%= order.ID_Pedido %>
                                    </td>
                                    <td class="estado">
                                        <%= order.EstadoPedido %>
                                    </td>
                                    <td class="direccion">
                                        <%= order.Direccion %>
                                    </td>
                                    <td class="cliente">
                                        <%= order.Nombre_Cliente %>
                                    </td>
                                    <td class="precio"></td>
                                    <td class="repartidor">
                                        <%= order.Nombre %>
                                    </td>
                                    <td class="fecha">
                                        <%= order.FechaPedido %>
                                    </td>
                                    <td>
                                        <div class="rounded icon-button">
                                            <button class="btn btn-warning edit-user-btn" type="button"
                                                data-bs-toggle="modal" data-bs-target="#exampleEditUserModal">
                                                <i class="sidebar-icon bi bi-pencil-fill"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="rounded icon-button ms-1 remove">
                                            <button type="button" class="btn btn-danger delete-user-btn" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                              <i class="sidebar-icon bi bi-x"></i>
                                            </button>
                                          </div>
                                    </td>
                                    <td>
                                        <div class="rounded icon-button ms-1 remove">
                                            <button class="generar btn btn-info "><i class="bi bi-file-earmark-arrow-down"></i></button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/scripts') %>
    <script src="/js/orders.js"></script>
    <script src="/js/PDFgenery.js"></script>
</body>

</html>